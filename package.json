{
  "name": "canvasimo",
  "version": "0.5.3",
  "description": "An HTML5 canvas drawing library, with 150+ useful methods, jQuery-like fluent interface, and cross-browser compatibility enhancements.",
  "main": "dist/index.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "start": "http-server docs -c-0 -o",
    "dist": "rm -rf dist && mkdir -p dist && browserify -p [ tsify --project src/tsconfig.json ] --standalone canvasimo src/index.ts > dist/index.js",
    "build": "babel-node scripts/generate-docs.js",
    "watch": "babel-node scripts/generate-docs.js watch",
    "lint-js": "tslint --project tsconfig.json '@(src|tests|types|docs)/**/*.@(ts|tsx)'",
    "lint": "npm run lint-js",
    "tests": "jest",
    "test": "npm run lint && npm run tests -- --coverage --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jakesidsmith/canvasimo.git"
  },
  "keywords": [
    "sensible",
    "simple",
    "fluent",
    "canvas",
    "api",
    "interface",
    "html5",
    "chain",
    "canvasimo"
  ],
  "author": "Jake 'Sid' Smith",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jakesidsmith/canvasimo/issues"
  },
  "homepage": "https://github.com/jakesidsmith/canvasimo#readme",
  "dependencies": {
    "typescript": ">= 2.3 < 3"
  },
  "devDependencies": {
    "@types/jest": "22.1.0",
    "browserify": "15.2.0",
    "http-server": "=0.9.0",
    "jest": "22.1.4",
    "mkdirp": "=0.5.1",
    "react": "=15.3.0",
    "react-dom": "=15.3.0",
    "rimraf": "=2.5.4",
    "ts-jest": "22.0.1",
    "tsify": "3.0.4",
    "tslint": "5.9.1",
    "tslint-eslint-rules": "4.1.1",
    "typescript": "2.3.4",
    "underscore": "=1.8.3",
    "watch": "=0.19.1"
  },
  "jest": {
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "testRegex": "(/tests/.*|\\.(test|spec))\\.(ts|tsx|js|jsx)$",
    "testPathIgnorePatterns": [
      "tests/mocks/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
